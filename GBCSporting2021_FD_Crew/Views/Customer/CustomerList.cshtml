@{
    ViewData["Title"] = "Customer Manager";
}

<h1>@ViewData["Title"]</h1>

<div class="row">

    <div class="col-sm-10">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>City</th>
                    <th></th>
                    <th></th>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.FirstName @customer.LastName</td>
                        <td>@customer.Email</td>
                        <td>@customer.City</td>
                        <td>
                            <a asp-action="Edit" class="btn btn-primary"
                               asp-route-id="@customer.CustomerId">Edit</a>
                        </td>
                        <td>

                            <a asp-action="Delete" class="btn btn-primary"
                               asp-route-id="@customer.CustomerId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="Add" class="btn btn-primary">Add Customer</a>
    </div>
</div>
