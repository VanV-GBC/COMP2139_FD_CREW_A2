@model Product
@{
    string title = ViewBag.Action + " Products";
    ViewBag.Title = title;
}

@section scripts {
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/
                       jquery.validate.unobtrusive.min.js"></script>
}

<h1>@ViewBag.Title</h1>

<form asp-action="@ViewBag.Action" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ProductCode">Code</label>
        <input asp-for="ProductCode" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="ProductName">Name</label>
        <input asp-for="ProductName" class="form-control">
    </div>


    <div class="form-group">
        <label asp-for="Price">Yearly Price</label>
        <input asp-for="Price" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="ReleaseDate">Release Date</label>
        <input asp-for="ReleaseDate" value="@(DateTime.Now)" class="form-control">
    </div>


    <input type="hidden" asp-for="ProductId" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-action="List" class="btn btn-primary">Cancel</a>
</form>
